<li id="notes-<%= note.id  %>">
  <%= link_to gravatar_for(note.user, size: 30), note.user %>
  <span class="user"><%= link_to note.user.name, note.user %></span>
  <span class="content">
    <%= simple_format note.content[0..250] %>
    <%= link_to "(more)", note_path(note) %>
  </span>
  <span class="timestamp">Posted: <%= time_ago_in_words(note.created_at) %> ago</span>
</li>
 
