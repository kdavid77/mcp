<%= provide(:title, "Note") %>

<div class="col-md-12">
  <%= link_to "Back to notes", notes_path(show_archived_notes: session[:show_archived_notes], search_keywords: session[:search_keywords]), class: "btn btn-primary" %>
  <% if current_user?(@note.user) %>
    <%= render 'buttons_show', object: @note %>
  <% end %>
</div>

<div class="notes">
  <div class="timestamp">Posted: <%= time_ago_in_words(@note.created_at) %> ago
   /  Last updated: <%= time_ago_in_words(@note.updated_at) %> ago</div>
  <h4><%= simple_format @note.title %></h4>
  <div class="show">
    <%= simple_format @note.content %>
  </div>
</div>

<div class="col-md-12">
   <%= link_to "Back to notes", notes_path(show_archived_notes: session[:show_archived_notes], search_keywords: session[:search_keywords]), class: "btn btn-primary" %>
  <% if current_user?(@note.user) %>
    <%= render 'buttons_show', object: @note %>
  <% end %>
</div>

