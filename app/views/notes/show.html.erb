<%= provide(:title, "Note") %>

<div class="col-md-12">
  <%= link_to "Back to notes", notes_path(show_archived_notes: session[:show_archived_notes], search_keywords: session[:search_keywords]), class: "btn btn-primary" %>
  <% if current_user?(@note.user) %>
    <%= render 'buttons_show', object: @note %>
  <% end %>
</div>

<div class="notes">
  <span class="timestamp">Posted: <%= time_ago_in_words(@note.created_at) %> ago
   /  Last updated: <%= time_ago_in_words(@note.updated_at) %> ago</span>
  <div class="show">
    <%= simple_format @note.content %>
  </div>
</div>

<div class="col-md-12">
   <%= link_to "Back to notes", notes_path(show_archived_notes: session[:show_archived_notes], search_keywords: session[:search_keywords]), class: "btn btn-primary" %>
  <% if current_user?(@note.user) %>
    <%= render 'archive_note', object: @note %>
    <%= link_to "Edit", edit_note_path(@note), class: "btn" if not @note.archived %>
    <%= link_to "Delete", @note, method: :delete, class: "btn", data: {confirm: "Are you sure?"} %>
  <% end %>
</div>

