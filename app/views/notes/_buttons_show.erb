<% if object.archived %>
  <%= link_to "Activate", note_activate_path(object), class: "btn" %>
<% else %>
  <%= link_to "Archive", note_archive_path(object), class: "btn" %>
<% end %> 

<%= link_to "Edit", edit_note_path(object), class: "btn" if not object.archived %>

<%= link_to "Delete", object, method: :delete, class: "btn", data: {confirm: "Are you sure?"} %>